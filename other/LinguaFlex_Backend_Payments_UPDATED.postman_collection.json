{
  "info": {
    "name": "LinguaFlex Backend Payments - UPDATED",
    "description": "Updated backend payment flow with correct URLs for LinguaFlex gig bookings",
    "version": "2.1.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "User Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"student@example.com\",\n    \"password\": \"testpass123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/accounts/login/",
              "host": ["{{base_url}}"],
              "path": ["api", "accounts", "login", ""]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Backend Payment Methods",
      "item": [
        {
          "name": "Add Payment Method (Save Card)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"card_number\": \"{{test_card_number}}\",\n    \"exp_month\": {{test_exp_month}},\n    \"exp_year\": {{test_exp_year}},\n    \"cvc\": \"{{test_cvc}}\",\n    \"cardholder_name\": \"John Doe\",\n    \"save_for_future\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/payments/add-payment-method/",
              "host": ["{{base_url}}"],
              "path": ["api", "payments", "add-payment-method", ""]
            }
          },
          "response": []
        },
        {
          "name": "Add Payment Method (Declined Card)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"card_number\": \"4000000000000002\",\n    \"exp_month\": 12,\n    \"exp_year\": 2025,\n    \"cvc\": \"123\",\n    \"cardholder_name\": \"John Doe\",\n    \"save_for_future\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/payments/add-payment-method/",
              "host": ["{{base_url}}"],
              "path": ["api", "payments", "add-payment-method", ""]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Backend Payment Processing",
      "item": [
        {
          "name": "Process Payment (New Card)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"gig_id\": {{test_gig_id}},\n    \"card_details\": {\n        \"card_number\": \"{{test_card_number}}\",\n        \"exp_month\": {{test_exp_month}},\n        \"exp_year\": {{test_exp_year}},\n        \"cvc\": \"{{test_cvc}}\",\n        \"cardholder_name\": \"Jane Smith\"\n    },\n    \"save_card\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/payments/process-payment/",
              "host": ["{{base_url}}"],
              "path": ["api", "payments", "process-payment", ""]
            }
          },
          "response": []
        },
        {
          "name": "Process Payment (Saved Card)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"gig_id\": {{test_gig_id}},\n    \"saved_payment_method_id\": \"{{saved_payment_method_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/payments/process-payment/",
              "host": ["{{base_url}}"],
              "path": ["api", "payments", "process-payment", ""]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Payment Method Management",
      "item": [
        {
          "name": "List Saved Payment Methods",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/payments/payment-methods/",
              "host": ["{{base_url}}"],
              "path": ["api", "payments", "payment-methods", ""]
            }
          },
          "response": []
        },
        {
          "name": "Delete Payment Method",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/payments/payment-methods/{{payment_method_id}}/delete/",
              "host": ["{{base_url}}"],
              "path": ["api", "payments", "payment-methods", "{{payment_method_id}}", "delete", ""]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Payment History",
      "item": [
        {
          "name": "List Payments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/payments/payments/",
              "host": ["{{base_url}}"],
              "path": ["api", "payments", "payments", ""]
            }
          },
          "response": []
        },
        {
          "name": "Get Payment Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/payments/payments/{{payment_id}}/",
              "host": ["{{base_url}}"],
              "path": ["api", "payments", "payments", "{{payment_id}}", ""]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Admin Dashboard",
      "item": [
        {
          "name": "Payment Dashboard",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/payments/dashboard/",
              "host": ["{{base_url}}"],
              "path": ["api", "payments", "dashboard", ""]
            }
          },
          "response": []
        }
      ]
    }
  ],
